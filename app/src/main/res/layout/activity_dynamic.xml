<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="#e7e7e7"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.wisdom.partybuilding.mvp.home.activity.DynamicActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/lay_20"
        android:background="#ff0000"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/lay_52"
        android:background="#ff0000">

        <ImageView
            android:id="@+id/dynamic_return"
            android:layout_marginLeft="@dimen/lay_10"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/lay_25"
            android:layout_height="@dimen/lay_25"
            android:src="@mipmap/top_back"/>

        <TextView
            android:id="@+id/dynamic_title"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="党委新闻"
            android:textSize="@dimen/font_18"
            android:textColor="#FFF"/>

    </RelativeLayout>



    <android.support.v7.widget.RecyclerView
        android:id="@+id/dynamic_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>
