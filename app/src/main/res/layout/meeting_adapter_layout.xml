<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/meeting_adapter_linear"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/lay_15"
        android:layout_marginTop="@dimen/lay_20"
        android:layout_marginRight="@dimen/lay_15">


        <TextView
            android:id="@+id/meeting_adapter_tiem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ssssssssssssssssssssssfffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffssssssssssssssssssssssssssssssssssssssssssssssssssssssss"
            android:textColor="#0b0b0b"
            android:textSize="@dimen/font_16" />

        <LinearLayout
            android:id="@+id/meeting_adapter_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/meeting_adapter_tiem"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/lay_12"
            android:layout_marginBottom="@dimen/lay_15"
            android:gravity="center_vertical">


            <ImageView
                android:id="@+id/meeting_adapter_sign_img"
                android:layout_width="@dimen/lay_20"
                android:layout_height="@dimen/lay_20"
                android:src="@mipmap/sign1" />


            <TextView
                android:id="@+id/meeting_adapter_sign_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="签到成功" />

        </LinearLayout>

        <!--sign-->
        <!--notes-->

        <LinearLayout
            android:layout_marginRight="@dimen/lay_90"
            android:layout_marginTop="@dimen/lay_12"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/meeting_adapter_tiem"
            android:id="@+id/meeting_adapter_notes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">


            <ImageView
                android:layout_width="@dimen/lay_20"
                android:layout_height="@dimen/lay_20"
                android:src="@mipmap/notes" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/meeting_adapter_notes"
                android:text="会议记录" />

        </LinearLayout>




    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/lay_1"
        android:background="#e1e4e9" />


</LinearLayout>