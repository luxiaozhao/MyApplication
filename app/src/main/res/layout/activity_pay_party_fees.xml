<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7"
    android:orientation="vertical"
    tools:context="com.example.wisdom.partybuilding.mvp.activity.home.PayPartyFeesActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/lay_20"
        android:background="#ff0000" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/lay_52"
        android:background="#ff0000">

        <ImageView
            android:id="@+id/expense_return"
            android:layout_width="@dimen/lay_25"
            android:layout_height="@dimen/lay_25"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/lay_10"
            android:src="@mipmap/top_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="党费缴纳"
            android:textColor="#FFF"
            android:textSize="@dimen/font_18" />


        <TextView
            android:id="@+id/expense_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/lay_15"
            android:text="明细"
            android:textColor="#FFF"
            android:textSize="@dimen/font_15" />

    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFF"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="122dp"
                android:scaleType="fitXY"
                android:src="@mipmap/partyflag" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/lay_30"
                android:background="#efefef"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/lay_15"
                android:text="党费缴纳金额"
                android:textColor="#888888"
                android:textSize="@dimen/font_14" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/lay_58"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/lay_15">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="缴费金额："
                    android:textColor="#0b0b0b"
                    android:textSize="@dimen/font_16" />

                <TextView
                    android:id="@+id/expense_sum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="如：200.00"
                    android:textColor="#e1e4e9"
                    android:textSize="@dimen/font_16" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/lay_1"
                android:background="#e1e4e9" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/lay_58"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/lay_15">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="应缴月份："
                    android:textColor="#0b0b0b"
                    android:textSize="@dimen/font_16" />

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/expense_month"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="请选择月份"
                    android:textColor="#e1e4e9"
                    android:textSize="@dimen/font_16" />


                <ImageView
                    android:layout_marginRight="@dimen/lay_6"
                    android:layout_width="@dimen/lay_25"
                    android:layout_height="@dimen/lay_25"
                    android:src="@mipmap/jinru"/>

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/lay_30"
                android:background="#efefef"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/lay_15"
                android:text="请选择支付方式"
                android:textColor="#888888"
                android:textSize="@dimen/font_14" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/lay_74"
                android:gravity="center_vertical">


                <ImageView
                    android:id="@+id/match_weixin_img"
                    android:layout_width="@dimen/lay_35"
                    android:layout_height="@dimen/lay_35"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/lay_14"
                    android:src="@mipmap/weixin" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/lay_10"
                    android:layout_toEndOf="@+id/match_weixin_img"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="微信支付"
                        android:textColor="#0b0b0b"
                        android:textSize="@dimen/font_16" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="亿万用户的选择，更快更安全"
                        android:textColor="#cbcccc"
                        android:textSize="@dimen/font_12" />


                </LinearLayout>

                <CheckBox
                    android:id="@+id/match_weixin_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/lay_10"
                    android:button="@drawable/check_state"
                    android:gravity="center" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/lay_74"
                android:gravity="center_vertical">


                <ImageView
                    android:id="@+id/match_zhifubao_img"
                    android:layout_width="@dimen/lay_35"
                    android:layout_height="@dimen/lay_35"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/lay_14"
                    android:src="@mipmap/zhifubao" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/lay_10"
                    android:layout_toEndOf="@+id/match_zhifubao_img"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="支付宝"
                        android:textColor="#0b0b0b"
                        android:textSize="@dimen/font_16" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="大家都在用，安全可托付"
                        android:textColor="#cbcccc"
                        android:textSize="@dimen/font_12" />


                </LinearLayout>

                <CheckBox

                    android:id="@+id/match_zhifubao_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/lay_10"
                    android:button="@drawable/check_state"
                    android:gravity="center" />


            </RelativeLayout>

            <TextView
                android:id="@+id/match_confirm"
                android:layout_width="match_parent"
                android:layout_height="@dimen/lay_40"
                android:layout_marginLeft="@dimen/lay_15"
                android:layout_marginTop="@dimen/lay_25"
                android:layout_marginRight="@dimen/lay_15"
                android:background="@drawable/button_border_red"
                android:gravity="center"
                android:text="确认缴费"
                android:textColor="#FFF"
                android:textSize="@dimen/font_16"
                android:layout_marginBottom="@dimen/lay_50"/>


        </LinearLayout>


    </ScrollView>


</LinearLayout>
