<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mvp.home.activity.ThreeSessionsActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/lay_20"
        android:background="#ff0000" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/lay_52"
        android:background="#ff0000">

        <ImageView
            android:layout_width="@dimen/lay_25"
            android:layout_height="@dimen/lay_25"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/lay_10"
            android:src="@mipmap/top_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="三会一课"
            android:textColor="#FFF"
            android:textSize="@dimen/font_18" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">


        <LinearLayout
            android:id="@+id/three_sessions_branch_party_assembly"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:layout_width="@dimen/lay_45"
                android:layout_height="@dimen/lay_45"
                android:src="@mipmap/dongtai" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支部党员大会"
                android:textColor="#0b0b0b"
                android:textSize="@dimen/font_14" />

        </LinearLayout>

        <View
            android:layout_width="@dimen/lay_1"
            android:layout_height="match_parent"
            android:background="#e1e4e9" />

        <LinearLayout
            android:id="@+id/three_sessions_branch_committee"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:layout_width="@dimen/lay_45"
                android:layout_height="@dimen/lay_45"
                android:src="@mipmap/dongtai" />

            branchCommittee
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支部委员会"
                android:textColor="#0b0b0b"
                android:textSize="@dimen/font_14" />

        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/lay_1"
        android:background="#e1e4e9" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">


        <LinearLayout
            android:id="@+id/three_sessions_party_group_meeting"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:layout_width="@dimen/lay_45"
                android:layout_height="@dimen/lay_45"
                android:src="@mipmap/dongtai" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="党小组会"
                android:textColor="#0b0b0b"
                android:textSize="@dimen/font_14" />

        </LinearLayout>

        <View
            android:layout_width="@dimen/lay_1"
            android:layout_height="match_parent"
            android:background="#e1e4e9" />

        <LinearLayout
            android:id="@+id/three_sessions_party_class"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:layout_width="@dimen/lay_45"
                android:layout_height="@dimen/lay_45"
                android:src="@mipmap/dongtai" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="党课"
                android:textColor="#0b0b0b"
                android:textSize="@dimen/font_14" />

        </LinearLayout>


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/lay_1"
        android:background="#e1e4e9" />

</LinearLayout>