<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mvp.home.activity.MeetingRecordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/lay_20"
        android:background="#ff0000" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/lay_52"
        android:background="#ff0000">

        <ImageView
            android:id="@+id/meeting_record_return"
            android:layout_width="@dimen/lay_25"
            android:layout_height="@dimen/lay_25"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/lay_10"
            android:src="@mipmap/top_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="写会议记录"
            android:textColor="#FFF"
            android:textSize="@dimen/font_18" />

    </RelativeLayout>

    <ScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/lay_15">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/lay_14"
                    android:text="会议名称"
                    android:textColor="#0b0b0b"
                    android:textSize="@dimen/font_16" />

                <TextView
                    android:id="@+id/meeting_record_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/lay_25"
                    android:layout_marginTop="@dimen/lay_14"
                    android:layout_marginBottom="@dimen/lay_20"
                    android:layout_weight="1"
                    android:text="总部党群工作党部支部开展“两会一做”第二次学习研讨"
                    android:textColor="#0b0b0b"
                    android:textSize="@dimen/font_16" />

                <ImageView
                    android:id="@+id/meeting_record_name_img"
                    android:layout_width="@dimen/lay_25"
                    android:layout_height="@dimen/lay_25"
                    android:layout_marginTop="@dimen/lay_14"
                    android:layout_marginRight="@dimen/lay_7"
                    android:src="@mipmap/jinru" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/lay_1"
                android:layout_marginLeft="@dimen/lay_15"
                android:background="#e1e4e9" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/lay_15">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/lay_14"
                    android:drawableRight="@mipmap/xing"
                    android:text="会议时间 "
                    android:textColor="#0b0b0b"
                    android:textSize="@dimen/font_16" />

                <TextView
                    android:id="@+id/meeting_record_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/lay_25"
                    android:layout_marginTop="@dimen/lay_14"
                    android:layout_marginBottom="@dimen/lay_20"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="2018-12-17"
                    android:textColor="#0b0b0b"
                    android:textSize="@dimen/font_16" />

                <ImageView
                    android:id="@+id/meeting_record_time_img"
                    android:layout_width="@dimen/lay_25"
                    android:layout_height="@dimen/lay_25"
                    android:layout_marginTop="@dimen/lay_14"
                    android:layout_marginRight="@dimen/lay_7"
                    android:src="@mipmap/jinru" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/lay_1"
                android:layout_marginLeft="@dimen/lay_15"
                android:background="#e1e4e9" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/lay_15">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/lay_14"
                    android:drawableRight="@mipmap/xing"
                    android:text="主持人 "
                    android:textColor="#0b0b0b"
                    android:textSize="@dimen/font_16" />

                <TextView
                    android:id="@+id/meeting_record_host"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/lay_25"
                    android:layout_marginTop="@dimen/lay_14"
                    android:layout_marginBottom="@dimen/lay_20"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="王小明"
                    android:textColor="#0b0b0b"
                    android:textSize="@dimen/font_16" />

                <ImageView
                    android:id="@+id/meeting_record_host_img"
                    android:layout_width="@dimen/lay_25"
                    android:layout_height="@dimen/lay_25"
                    android:layout_marginTop="@dimen/lay_14"
                    android:layout_marginRight="@dimen/lay_7"
                    android:src="@mipmap/jinru" />


            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/lay_1"
                android:layout_marginLeft="@dimen/lay_15"
                android:background="#e1e4e9" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/lay_15">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/lay_14"
                    android:drawableRight="@mipmap/xing"
                    android:text="会议地点 "
                    android:textColor="#0b0b0b"
                    android:textSize="@dimen/font_16" />

                <TextView
                    android:id="@+id/meeting_record_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/lay_25"
                    android:layout_marginTop="@dimen/lay_14"
                    android:layout_marginBottom="@dimen/lay_20"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="*******党小组"
                    android:textColor="#0b0b0b"
                    android:textSize="@dimen/font_16" />

                <ImageView
                    android:id="@+id/meeting_record_location_img"
                    android:layout_width="@dimen/lay_25"
                    android:layout_height="@dimen/lay_25"
                    android:layout_marginTop="@dimen/lay_14"
                    android:layout_marginRight="@dimen/lay_7"
                    android:src="@mipmap/jinru" />


            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/lay_10"
                android:background="#f7f7f7" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/lay_15">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/lay_14"
                    android:drawableRight="@mipmap/xing"
                    android:text="记录人 "
                    android:textColor="#0b0b0b"
                    android:textSize="@dimen/font_16" />

                <TextView
                    android:id="@+id/meeting_record_recorder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/lay_25"
                    android:layout_marginTop="@dimen/lay_14"
                    android:layout_marginBottom="@dimen/lay_20"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="刘依然"
                    android:textColor="#0b0b0b"
                    android:textSize="@dimen/font_16" />

                <ImageView
                    android:id="@+id/meeting_record_recorder_img"
                    android:layout_width="@dimen/lay_25"
                    android:layout_height="@dimen/lay_25"
                    android:layout_marginTop="@dimen/lay_14"
                    android:layout_marginRight="@dimen/lay_7"
                    android:src="@mipmap/jinru" />


            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/lay_1"
                android:layout_marginLeft="@dimen/lay_15"
                android:background="#e1e4e9" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/lay_15">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/lay_14"
                    android:drawableRight="@mipmap/xing"
                    android:text="应到人数 "
                    android:textColor="#0b0b0b"
                    android:textSize="@dimen/font_16" />

                <TextView
                    android:id="@+id/meeting_record_shouldnum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/lay_25"
                    android:layout_marginTop="@dimen/lay_14"
                    android:layout_marginBottom="@dimen/lay_20"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="17"
                    android:textColor="#0b0b0b"
                    android:textSize="@dimen/font_16" />

                <ImageView
                    android:id="@+id/meeting_record_shouldnum_img"
                    android:layout_width="@dimen/lay_25"
                    android:layout_height="@dimen/lay_25"
                    android:layout_marginTop="@dimen/lay_14"
                    android:layout_marginRight="@dimen/lay_7"
                    android:src="@mipmap/jinru" />


            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/lay_1"
                android:layout_marginLeft="@dimen/lay_15"
                android:background="#e1e4e9" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/lay_15">


                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/lay_14"
                    android:drawableRight="@mipmap/xing"
                    android:text="实到人数 "
                    android:textColor="#0b0b0b"
                    android:textSize="@dimen/font_16" />

                <TextView
                    android:id="@+id/meeting_record_realnum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/lay_25"
                    android:layout_marginTop="@dimen/lay_14"
                    android:layout_marginBottom="@dimen/lay_20"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="7"
                    android:textColor="#0b0b0b"
                    android:textSize="@dimen/font_16" />

                <ImageView
                    android:id="@+id/meeting_record_realnum_img"
                    android:layout_width="@dimen/lay_25"
                    android:layout_height="@dimen/lay_25"
                    android:layout_marginTop="@dimen/lay_14"
                    android:layout_marginRight="@dimen/lay_7"
                    android:src="@mipmap/jinru" />


            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/lay_1"
                android:layout_marginLeft="@dimen/lay_15"
                android:background="#e1e4e9" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/lay_15">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/lay_14"
                    android:drawableRight="@mipmap/xing"
                    android:text="会议议题 "
                    android:textColor="#0b0b0b"
                    android:textSize="@dimen/font_16" />

                <TextView
                    android:id="@+id/meeting_record_meetingtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/lay_25"
                    android:layout_marginTop="@dimen/lay_14"
                    android:layout_marginBottom="@dimen/lay_20"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="总部党群工作党部支部开展“两会一做”第二次学习研讨"
                    android:textColor="#0b0b0b"
                    android:textSize="@dimen/font_16" />

                <ImageView
                    android:id="@+id/meeting_record_meetingtitle_img"
                    android:layout_width="@dimen/lay_25"
                    android:layout_height="@dimen/lay_25"
                    android:layout_marginTop="@dimen/lay_14"
                    android:layout_marginRight="@dimen/lay_7"
                    android:src="@mipmap/jinru" />


            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/lay_10"
                android:background="#f7f7f7" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/lay_15"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/lay_20">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/lay_20"
                    android:text="会议内容"
                    android:textColor="#0b0b0b"
                    android:textSize="@dimen/font_16" />


                <TextView
                    android:padding="@dimen/lay_10"
                    android:id="@+id/meeting_record_meetingcontent"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:layout_marginTop="@dimen/lay_20"
                    android:layout_marginRight="@dimen/lay_15"
                    android:layout_marginBottom="@dimen/lay_30"
                    android:background="@drawable/texr_grayedge" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/lay_10"
                android:background="#f7f7f7" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/lay_15">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/lay_14"
                    android:drawableRight="@mipmap/xing"
                    android:text="发布人 "
                    android:textColor="#0b0b0b"
                    android:textSize="@dimen/font_16" />

                <TextView
                    android:id="@+id/meeting_record_takenote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/lay_25"
                    android:layout_marginTop="@dimen/lay_14"
                    android:layout_marginBottom="@dimen/lay_20"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="刘毅然"
                    android:textColor="#0b0b0b"
                    android:textSize="@dimen/font_16" />

                <ImageView
                    android:id="@+id/meeting_record_takenote_img"
                    android:layout_width="@dimen/lay_25"
                    android:layout_height="@dimen/lay_25"
                    android:layout_marginTop="@dimen/lay_14"
                    android:layout_marginRight="@dimen/lay_7"
                    android:src="@mipmap/jinru" />


            </LinearLayout>



        </LinearLayout>

    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/lay_90"
        android:background="#f7f7f7"
        android:gravity="center_vertical">


        <TextView
            android:id="@+id/meeting_record_break"
            android:layout_width="match_parent"
            android:layout_height="@dimen/lay_40"
            android:layout_marginLeft="@dimen/lay_15"
            android:layout_marginRight="@dimen/lay_15"
            android:layout_weight="1"
            android:background="@drawable/button_border_redandwhite"
            android:gravity="center"
            android:text="刷新"
            android:textColor="#ff0000"
            android:textSize="@dimen/font_16" />

        <TextView
            android:id="@+id/meeting_record_save"
            android:layout_width="match_parent"
            android:layout_height="@dimen/lay_40"
            android:layout_marginLeft="@dimen/lay_15"
            android:layout_marginRight="@dimen/lay_15"
            android:layout_weight="1"
            android:background="@drawable/button_border_red"
            android:gravity="center"
            android:text="保存"

            android:textColor="#fff"
            android:textSize="@dimen/font_16" />



    </LinearLayout>


</LinearLayout>