<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/upcoming_adapter_linear"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="#FFF">

<LinearLayout
    android:paddingTop="@dimen/lay_15"
    android:paddingBottom="@dimen/lay_15"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">




    <TextView

        android:id="@+id/upcoming_adapter_name"
        android:layout_marginLeft="@dimen/lay_15"
        android:layout_width="@dimen/lay_48"
        android:layout_height="@dimen/lay_48"
        android:background="@drawable/text_circle2"
        android:gravity="center"
        android:text="赵健"
        android:textColor="#fff"
        android:textSize="@dimen/font_14" />



    <TextView

        android:id="@+id/upcoming_adapter_type"
        android:layout_marginLeft="@dimen/lay_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发展对象转为预备党员xxxxxxxxxxxxxxxxxxxxxxxxxxx"
        android:textColor="#0b0b0b"
        android:textSize="@dimen/font_15"/>





</LinearLayout>

<View
    android:layout_marginLeft="@dimen/lay_15"
    android:layout_width="match_parent"
    android:layout_height="@dimen/lay_1"
    android:background="#e1e4e9"/>
</LinearLayout>