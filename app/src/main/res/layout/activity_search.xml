<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7"
    android:orientation="vertical"
    tools:context="com.example.wisdom.partybuilding.mvp.activity.home.SearchActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/lay_20"
        android:background="#ff0000" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/lay_52"
        android:background="#ff0000">

        <ImageView
            android:id="@+id/search_return"
            android:layout_width="@dimen/lay_25"
            android:layout_height="@dimen/lay_25"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/lay_10"
            android:src="@mipmap/top_back" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/lay_30"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/lay_60"
            android:layout_marginRight="@dimen/lay_60"
            android:background="@drawable/text_beijin_white"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/lay_10"
            android:paddingTop="@dimen/lay_5"
            android:paddingBottom="@dimen/lay_5">


            <ImageView
                android:layout_width="@dimen/lay_20"
                android:layout_height="@dimen/lay_20"
                android:src="@mipmap/suosou" />

            <EditText
                android:id="@+id/search_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/lay_10"
                android:layout_marginRight="@dimen/lay_14"
                android:background="@null"
                android:hint="智慧党建平台"
                android:singleLine="true"
                android:textColor="#888888"
                android:textSize="@dimen/font_14" />

        </LinearLayout>

    </RelativeLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/search_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>
