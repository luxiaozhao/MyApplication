<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:gravity="center">

        <ImageView
            android:layout_marginTop="@dimen/lay_10"
            android:id="@+id/id_index_gallery_item_image"
            android:layout_width="@dimen/lay_50"
            android:layout_height="@dimen/lay_50"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/pay_party_fees"/>

        <TextView
            android:layout_marginTop="@dimen/lay_10"
            android:id="@+id/id_index_gallery_item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="some info"
            android:textColor="#000000" />
    </LinearLayout>





</LinearLayout>